@{
    ViewData["Title"] = "Home Page";
}
@model BrightIdeas.Models.User

<link rel="stylesheet" href="~/css/main.css"/>
<div id="wrapper">
    <h3>Welcome!</h3>

    <main id="logreg">
        <div id="register">
            <h5>Register</h5>
            <form asp-controller="Ideas" asp-action="Register" method="post">
                <span asp-validation-for="name"></span>
                <label asp-for="name">Name:</label> <input asp-for="name"> </br>
                <span asp-validation-for="alias"></span>
                <label asp-for="alias">Alias:</label> <input asp-for="alias"></br>
                <span asp-validation-for="email"></span>
                @{
                    if(ViewBag.EmailErrors != null){
                        <p><span>@ViewBag.EmailErrors</span></p>
                    }
                }
                <label asp-for="email">Email:</label> <input asp-for="email"></br>
                <span asp-validation-for="password"></span>
                <label asp-for="password">Password:</label> <input type="password" asp-for="password"></br>
                <span asp-validation-for="confirmation"></span>
                <label asp-for="confirmation">Confirm PW:</label> <input type="password" asp-for="confirmation"></br>
                <input type="submit" value="Submit">
            </form>
        </div>

        <div id="login">
            <h5>Log In</h5>
            <form action="/login" method="post">
                <label for="email">Email</label>
                <input type="text" name="email">
                <label for="password">Password</label>
                <input type="password" name="password" id="">
                <p><input type="submit" value="Log in"></p>
            </form>
            @{
                if(ViewBag.LogErrors != null){
                    <p><span>@ViewBag.LogErrors</span></p>
                }
            }
        </div>

    </main>
</div>